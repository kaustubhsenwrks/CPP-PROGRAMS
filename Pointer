//pointer : special variable which store aqddress of an other variable 
#include <iostream>
using namespace std;
int main() {
    int a  = 10;
    int* ptr = &a;
    cout<<a<<"\n";
    cout<<ptr<<endl;
    // pointer to pointer
    // varisable which stores an adress of pointer
    int** ptr2 = &ptr;
    cout<<ptr2<<endl;
    cout<<&ptr<<endl;
    cout<<*ptr<<endl;
    cout<<*ptr2<<endl;
}
